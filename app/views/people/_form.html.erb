
<%= simple_form_for(@person) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: "שם מלא" %>
    <%= f.input :age, label: "גיל" %>
    <%= f.input :rank, label: "דרגה" %>
    <%= f.input :fall_date, label: "תאריך נפילה" %>
    <%= f.input :heb_fall_date, label: "תאריך נפילה עברי" %>
    <%= f.input :burial_place, label: "מקום קבורה" %>
    <%= f.input :ken, label: "קן מקור" %>
    <%= f.input :garin, label: "גרעין" %>
    <%= f.input :life_story, label: "סיפור חיים" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "שליחה" %>
  </div>
<% end %>
